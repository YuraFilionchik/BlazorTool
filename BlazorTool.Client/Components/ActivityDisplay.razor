@using BlazorTool.Client.Models

@if (ActivityItem != null)
{
    <div class="activity-row">
        <span class="activity-category" title="Category">@ActivityItem.ActCategory</span>
        <span class="activity-description" title="Description">@ActivityItem.Description</span>
        <span class="activity-workload" title="Work Load">@ActivityItem.WorkLoad.ToString("F2") h</span>
        <span class="activity-workers" title="Workers">@ActivityItem.Workers worker(s)</span>
        <span class="activity-persons" title="Assigned Persons">@ActivityItem.ActPersons</span>
        <span class="activity-date" title="Date Added">@ActivityItem.AddDate.ToString("dd.MM.yyyy HH:mm")</span>
    </div>
}

@code {
    [Parameter]
    public Activity? ActivityItem { get; set; }
}
